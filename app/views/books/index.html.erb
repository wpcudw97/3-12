  <body>
    <p class="notice"><%= flash[:notice] %></p>

    <h1>Books</h1>

    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
        </tr>
      </thead>

      <% @books.each do |book| %>
        <tbody>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.body  %></td></td>
            <td><%= link_to "Show",  book_path(book.id)  %></td>
            <td><%= link_to "Edit", edit_book_path(book.id) %></td>
            <td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
          </tr>
        </tbody>
      <% end %>
    </table>

    <h2>New book</h2>

    <% if @book && @book.errors.any? %>
      <%= @book.errors.count %>errors prohibited this book from being saved:
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>


    <%= form_with model:Book.new do |f| %>
      <div>Title</div>
      <div class="text-field"><%= f.text_field :title %></div>

      <div>Body</div>
      <div class="text-field"><%= f.text_area :body %></div>

      <div class="text-field"><%= f.submit 'Create Book' %></div>
    <% end %>

