<h1>Books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
</table>

<h2>New book</h2>

<%= form_with model:Book.new do |f| %>
  <div>Title</div>
  <div class="text-field"><%= f.text_field :title %></div>

  <div>Body</div>
  <div class="text-field"><%= f.text_area :body %></div>

  <div class="text-field"><%= f.submit 'Create Book' %></div>
<% end %>