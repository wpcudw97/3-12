  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <div>Title</div>
  <div class="text-field"><%= f.text_field :title %></div>

  <div>Body</div>
  <div class="text-field"><%= f.text_area :body %></div>

  <div class="text-field"><%= f.submit 'Update Book' %></div>
<% end %>

<%= link_to "Show",  book_path(@book.id)  %>
